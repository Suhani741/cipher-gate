# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for specific file types
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.gz binary
*.bz2 binary
*.tar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Files to ignore for line ending normalization
package-lock.json binary
*.min.js binary
*.min.css binary
