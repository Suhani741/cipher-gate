# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ciphergate-dev

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=ciphergate-files-dev
S3_UPLOAD_FOLDER=uploads
S3_QUARANTINE_FOLDER=quarantine
MAX_FILE_SIZE=104857600  # 100MB in bytes
PRESIGNED_URL_EXPIRY=3600  # 1 hour in seconds

# File Scanning Configuration
FILE_SCANNING_ENABLED=true
USE_MOCK_SCANNER=true  # Set to false in production
MAX_SCAN_SIZE=52428800  # 50MB in bytes
SCAN_TIMEOUT=300000  # 5 minutes in ms

# ClamAV Configuration (if using)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=60000  # 60 seconds

# VirusTotal API (optional)
VIRUSTOTAL_API_KEY=your_virustotal_api_key
VIRUSTOTAL_ENABLED=false

# Email Configuration
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail  # or 'ses' for AWS SES in production
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM="CipherGate <noreply@ciphergate.com>"

# Admin Configuration
ADMIN_EMAIL=admin@ciphergate.com
ADMIN_DEFAULT_PASSWORD=ChangeMe123!

# Rate Limiting
RATE_LIMIT_MAX=100  # requests per 15 minutes per IP

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Session Configuration
SESSION_SECRET=your_session_secret
COOKIE_DOMAIN=localhost

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_2FA=false
FEATURE_FILE_SHARING=true
FEATURE_API_DOCS=true

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Test Environment (for reference, not used in production)
TEST_MONGODB_URI=mongodb://localhost:27017/ciphergate-test
USE_LOCALSTACK=false
LOCALSTACK_ENDPOINT=http://localhost:4566
